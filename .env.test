# Variables de entorno para TESTING
NODE_ENV=test

# Database de test (usar mongodb-memory-server o instancia separada)
MONGODB_URI_TEST=mongodb://localhost:27017/fenalco-test

# JWT para tests (puede ser diferente al de producci√≥n)
JWT_SECRET=test-secret-key-for-testing-only
JWT_EXPIRE=1d

# Email deshabilitado en tests
EMAIL_USER=test@example.com
EMAIL_PASS=test-password

# Cloudinary mock en tests
CLOUDINARY_NAME=test-cloud
CLOUDINARY_API_KEY=test-key
CLOUDINARY_API_SECRET=test-secret

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000

# Puerto para tests
PORT=5555
